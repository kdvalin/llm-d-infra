{{- $model := (env "MODEL") | default "Qwen/Qwen3-0.6B" -}}
{{- $url := (env "MODEL_URL") | default (printf "hf://%s" $model) -}}
{{- $gpus := (env "GPUS") | default 1 | int -}}
{{- $enable_podmonitor := eq (env "ENABLE_PODMONITOR") "true" | default false -}}

multinode: false

modelArtifacts:
  uri: "{{ $url }}"
  name: "{{ $model }}"
  size: {{ (env "MODEL_SIZE_GB") | default 20 | int }}Gi
  authSecretName: "llm-d-hf-token"

routing:
  modelName: "{{ $model }}"
  servicePort: 8000
  parentRefs:
    - group: gateway.networking.k8s.io
      kind: Gateway
      # name: infra-inference-scheduling-inference-gateway # set in helmfile

  proxy:
    image: ghcr.io/llm-d/llm-d-routing-sidecar:v0.2.0
    connector: nixlv2
    secure: false

  inferenceModel:
    create: false

  inferencePool:
    create: false
    # name: gaie-inference-scheduling # set in helmfile

  httpRoute:
    create: false

  epp:
    create: false

decode:
  create: true
  replicas: {{ (env "DECODE_REPLICAS") | default 2 | int }}
  monitoring:
    podmonitor:
      enabled: {{ $enable_podmonitor }}
      portName: "metrics"  # decode vLLM service port (from routing.proxy.targetPort)
      path: "/metrics"
      interval: "30s"
  containers:
  - name: "vllm"
    image: "ghcr.io/llm-d/llm-d:v0.2.0"
    modelCommand: vllmServe
    args:
      - "--enforce-eager"
      - "--kv-transfer-config"
      - '{"kv_connector":"NixlConnector", "kv_role":"kv_both"}'
    env:
      - name: CUDA_VISIBLE_DEVICES
        value: "{{range $i := $gpus}}{{if $i}},{{end}}{{$i}}{{end}}"
      - name: UCX_TLS
        value: "cuda_ipc,cuda_copy,tcp"
      - name: VLLM_NIXL_SIDE_CHANNEL_HOST
        valueFrom:
          fieldRef:
            fieldPath: status.podIP
      - name: VLLM_NIXL_SIDE_CHANNEL_PORT
        value: "5557"
      - name: VLLM_LOGGING_LEVEL
        value: DEBUG
    ports:
      - containerPort: 5557
        protocol: TCP
      - containerPort: 8200
        name: metrics
        protocol: TCP
    resources:
      limits:
        nvidia.com/gpu: "{{ $gpus }}"
      requests:
        nvidia.com/gpu: "{{ $gpus }}"
    mountModelVolume: true
    volumeMounts:
    - name: metrics-volume
      mountPath: /.config
    - name: torch-compile-cache
      mountPath: /.cache
  volumes:
  - name: metrics-volume
    emptyDir: {}
  - name: torch-compile-cache
    emptyDir: {}

# PD disabled in this example
prefill:
  create: false
